{
    "Input": {
        "Path": "E:\\Temp\\In",
        "Recurse": true,
        "Extension": "wav"
    },
    "Output": {
        "Format": {
            "Path": "Genre\\Artist\\Year - Album",
            "File": "TrackNumber - Title"
        },
        "Converters": [
            {
                "Type": "MP3",
                "Output": {
                    "Path": "E:\\Temp\\Out"
                },
                "Command": {
                    "Args": [ "-V2", "%input%", "%output%" ],
                    "Bin": "C:\\Apps\\lame.exe"
                }
            }
        ]
    },
    "FilenameEncoding": {
        "TagFormat": [
            "Artist",
            "Album",
            "Genre",
            "Year",
            "TrackNumber",
            "Title"
        ],
        "Delimiter": "#",
        "CharacterReplacements": [
            {
                "Character": "#",
                "Replacement": "&35;"
            },
            {
                "Character": ":",
                "Replacement": "&58;"
            },
            {
                "Character": "\\",
                "Replacement": "&92;"
            },
            {
                "Character": "/",
                "Replacement": "&47;"
            },
            {
                "Character": "?",
                "Replacement": "&63;"
            }
        ]
    }
}
