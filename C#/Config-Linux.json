{
    "Input": {
        "Path": "/home/rlo/Temp/For Tests/",
        "Recurse": true,
        "Extension": "wav"
    },
    "Output": {
        "Format": "Genre/Artist/Year - Album/TrackNumber - Title",
        "Converters": [
            {
                "Type": "MP3",
                "Output": {
                    "Path": "/home/rlo/Temp/MP3/"
                },
                "Command": {
                    "Args": [ "-V2", "%input%", "%output%" ],
                    "Bin": "lame"
                }
            }
        ]
    },
    "FilenameEncoding": {
        "TagFormat": [
            "Artist",
            "Album",
            "Genre",
            "Year",
            "TrackNumber",
            "Title"
        ],
        "Delimiter": "#",
        "CharacterReplacements": [
            {
                "Character": "#",
                "Replacement": "&35;"
            },
            {
                "Character": ":",
                "Replacement": "&58;"
            },
            {
                "Character": "\\",
                "Replacement": "&92;"
            },
            {
                "Character": "/",
                "Replacement": "&47;"
            },
            {
                "Character": "?",
                "Replacement": "&63;"
            }
        ]
    }
}
